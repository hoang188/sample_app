<h1>Create new article</h1>
<div class="row">
  <div class="span10">
    <%= form_for(@article) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :category %>
      <%= collection_select(:article, :category_id, Category.all, :id, :name) %>
      
      <%= f.label :title %>
      <%= f.text_field :title %>
 	  
 	  <%= f.label :description, "Description" %>
      <%= f.text_area(:description, :size => "24x4") %>
      
      <%= f.label :content %>
<!--       <%= f.text_area :content %> -->
      <%= cktext_area_tag("article[content]", "Ckeditor", :input_html => {:cols => 10, :rows => 20}, :toolbar => 'Easy') %>
		
      <%= f.label :publish %>
      <%= f.check_box :publish %>
	  <br />
      <%= f.submit "Create new Article", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
